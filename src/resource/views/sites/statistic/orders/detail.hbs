<section class="content">
  <div class="container-fluid">
    <!-- Profile Image -->
    <div class="card card-info card-outline">
      <div class="card-header p-2">
        <ul class="nav nav-pills">
          <li class="nav-item"><a class="nav-link" href="javascript:void(0)" data-toggle="tab">Thông tin đơn hàng</a>
          </li>
        </ul>
      </div><!-- /.card-header -->
      <div class="card-body box-profile">
        <div class="row">
          <div class="col-lg-3 mb-2">
            <div class="preview-image lg has-bg circle mx-auto mb-2" id="preview-image">
              <div class="img-box">
                <img src="{{order.user.avatar}}" alt="vvvimg" />
              </div>
            </div>
            <div class="text-center mb-2">
              {{order.user.name}}
            </div>
            {{#if (compare order.deliver.status "delivering")}}
            <div class="d-flex justify-content-around flex-wrap">
              <a href="/dashboard/products/edit/{{product.slug}}" class="btn btn-outline-danger">Hủy</a>
              <a href="javascript:void(0)" class="btn-outline-main delete" id="{{product._id}}">Đã chuyển</a>
            </div>
            {{else}}
            <div class="text-center">
              {{order.deliver.status}}
            </div>
            {{/if}}
          </div>

          <div class="col-lg-9">
            <div class="tab-content">
              <div class="active tab-pane" id="activity">
                <div class="tab-pane" id="settings">
                  <table id="example1" class="table table-hover table-striped">
                    <thead>
                      <tr>
                        <th scope="col" class="tick-col">
                          #
                        </th>
                        <th scope="col" class="product-name-col hide-on-checked">Tên sản phẩm</th>
                        <th scope="col" class="category-col hide-on-checked">Hình ảnh </th>
                        <th scope="col" class="price-col hide-on-checked">Số lượng</th>
                      </tr>
                    </thead>
                    <tbody id="tbody">
                      {{#each order.details as |detail|}}
                      <tr>
                        <td scope="row" class="tick-col">
                          {{add @index 1}}
                        </td>
                        <td class="product-name-col">{{detail.product.name}}</td>
                        <td class="category-col">
                          {{#with (lookup detail.product.images 0) as |src|}}
                          <div class="preview-image">
                            <div class="img-box">
                              <img src="{{src}}" alt="vvvimg"/>
                            </div>
                          </div>
                          {{/with}}
                        </td>
                        <td class="price-col"> {{detail.quantity}} </td>
                      </tr>
                      {{/each}}
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>#</th>
                        <th>Mã đơn hàng</th>
                        <th>Trạng thái</th>
                        <th>Thời gian</th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
                <!-- /.tab-pane -->
              </div>
            </div>
            <!-- /.tab-content -->
          </div>
        </div>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div><!-- /.container-fluid -->
  <div class="gap-md"></div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      $(document).ready(function () {
        $(document).on("click", ".preview-image .close-btn", function () {
          const parents = $(this).parents(".img-box");
          parents.slideUp(400);
          setTimeout(() => {
            parents.remove();
          }, 400);
        });

        const readImg = function (event) {
          const reader = new FileReader();
          reader.onload = function () {
            const src = reader.result;
            const html = `
              <div class="img-box">
                <div class="close-btn">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x"
                    viewBox="0 0 16 16">
                    <path
                      d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                  </svg>
                </div>
                <img src="${src}" alt="vvvimg" />
              </div>
            `;

            $("#preview-image").html(html);
          }
          reader.readAsDataURL(event.target.files[0]);
          $("#images").val("");
        };

        $("#images").on("input", function (event) {
          readImg(event);
        });

        $("#add").on("submit", async function () {

          // get data
          const imgContain = $(".preview-image img");
          let avatar;
          if (imgContain.length) {
            avatar = imgContain.attr("src");
          } else {
            avatar = "https://scontent.fsgn5-6.fna.fbcdn.net/v/t1.30497-1/143086968_2856368904622192_1959732218791162458_n.png?_nc_cat=1&ccb=1-3&_nc_sid=7206a8&_nc_ohc=kD8TgOu1pzYAX8JAzIl&_nc_ht=scontent.fsgn5-6.fna&oh=81482383c01711bdee6a54cf816d5d9c&oe=60E7F2F8";
          }
          const name = $("#name").val();
          const email = $("#email").val();
          const phone = $("#phone").val();
          const address = $("#address").val();

          const body = { name, email, phone, avatar, address };


          // post data
          const API_URL = '/api/users/admin';
          const token = localStorage.getItem("auth_token");


          try {
            // for loading animation
            $("#submit-btn").html(`
          <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
          Loading...
          `);

            const { data } = await axios.post(API_URL, body, {
              headers: {
                auth_token: token,
              }
            });

            alert("Thêm quản trị viên thành công");
            location.href = '/admins';
          } catch ({ response }) {
            const errorHTML = response.data.errors.map((current) => {
              return `
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong> ${current} </strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            `;
            });
            $("#error-box").html(errorHTML);
            // end animation when error
            $("#submit-btn").html(`Tạo admin`);
          }
        });
      });
    });
  </script>
</section>